{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es6",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "."
  },
  "include": ["./src"]
}
